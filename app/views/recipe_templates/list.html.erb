<h1>
  Recipe list
</h1>

<a href="/new_recipe_form">
  Add a new recipe
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Source website
    </th>

    <th>
      Name
    </th>

    <th>
      User
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @recipes.each do |recipe| %>
  <tr>
    <td>
      <%= recipe.id %>
    </td>

    <td>
      <%= recipe.source_website %>
    </td>

    <td>
      <%= recipe.name %>
    </td>

    <td>
      <%= recipe.user_id %>
    </td>

    <td>
      <%= time_ago_in_words(recipe.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(recipe.updated_at) %> ago
    </td>

    <td>
      <a href="/recipes/<%= recipe.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
