<h1>
  Ingredient list
</h1>

<a href="/new_ingredient_form">
  Add a new ingredient
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Category
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @ingredients.each do |ingredient| %>
  <tr>
    <td>
      <%= ingredient.id %>
    </td>

    <td>
      <%= ingredient.name %>
    </td>

    <td>
      <%= ingredient.category_id %>
    </td>

    <td>
      <%= time_ago_in_words(ingredient.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(ingredient.updated_at) %> ago
    </td>

    <td>
      <a href="/ingredients/<%= ingredient.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
